{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "code": {
          "type": "number",
          "description": "HTTP response code."
        },
        "url": {
          "type": "string",
          "description": "URL to requested resource."
        },
        "type": {
          "type": "string",
          "enum": [
            "object",
            "list"
          ],
          "description": "Type of data that is located in `data` attribute."
        },
        "request_id": {
          "type": "string",
          "description": "[Request ID](http://docs.apimanifest.apiary.io/#introduction/interacting-with-api/request-id). Send it with `X-Request-ID` header."
        }
      },
      "required": [
        "code",
        "url",
        "type",
        "request_id"
      ],
      "additionalProperties": false
    },
    "data": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[0-9a-f]{8}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{12}$"
        },
        "medication": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^[0-9a-f]{8}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{12}$"
            },
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "manufacturer": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "country": {
                  "type": "string",
                  "description": "`Dictionary COUNTRY`"
                }
              },
              "required": [
                "name",
                "country"
              ]
            },
            "code_atc": {
              "type": "string",
              "pattern": "^[abcdghjlmnprsvABCDGHJLMNPRSV]{1}()[0-9]{2}()[a-zA-Z]{2}()[0-9]{2}$"
            },
            "form": {
              "type": "string",
              "description": "`Dictionary MEDICATION_FORM`"
            },
            "container": {
              "type": "object",
              "properties": {
                "numerator_unit": {
                  "type": "string",
                  "description": "`Dictionary MEDICATION_UNIT`"
                },
                "numerator_value": {
                  "type": "number",
                  "minimum": 0,
                  "exclusiveMinimum": true
                },
                "denumerator_unit": {
                  "type": "string",
                  "description": "`Dictionary MEDICATION_UNIT`"
                },
                "denumerator_value": {
                  "type": "number",
                  "minimum": 0,
                  "exclusiveMinimum": true
                }
              },
              "required": [
                "numerator_unit",
                "numerator_value",
                "denumerator_unit",
                "denumerator_value"
              ]
            },
            "package_qty": {
              "type": "number",
              "minimum": 0,
              "exclusiveMinimum": true
            },
            "package_min_qty": {
              "type": "number",
              "minimum": 0,
              "exclusiveMinimum": true
            },
            "certificate": {
              "type": "string"
            },
            "certificate_expired_at": {
              "type": "string",
              "format": "date"
            },
            "ingredients": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "pattern": "^[0-9a-f]{8}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{12}$",
                    "description": "Identifier of innm_dosage"
                  },
                  "name": {
                    "type": "string"
                  },
                  "dosage": {
                    "type": "object",
                    "properties": {
                      "numerator_unit": {
                        "type": "string",
                        "description": "`Dictionary MEDICATION_UNIT`"
                      },
                      "numerator_value": {
                        "type": "number",
                        "minimum": 0,
                        "exclusiveMinimum": true
                      },
                      "denumerator_unit": {
                        "type": "string",
                        "description": "`Dictionary MEDICATION_UNIT`"
                      },
                      "denumerator_value": {
                        "type": "number",
                        "minimum": 0,
                        "exclusiveMinimum": true
                      }
                    },
                    "required": [
                      "numerator_unit",
                      "numerator_value",
                      "denumerator_unit",
                      "denumerator_value"
                    ],
                    "additionalProperties": false
                  },
                  "is_primary": {
                    "type": "boolean"
                  },
                  "required": [
                    "id",
                    "dosage",
                    "is_primary"
                  ],
                  "additionalProperties": false
                }
              },
              "minItems": 1
            },
            "is_active": {
              "type": "boolean"
            }
          },
          "required": [
            "id",
            "name",
            "type",
            "form",
            "container",
            "ingredients",
            "is_active"
          ]
        },
        "medical_program": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^[0-9a-f]{8}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{12}$",
              "description": "`Medical program Identifier`"
            },
            "name": {
              "type": "string",
              "description": "`Medical program name`"
            }
          },
          "required": [
            "id",
            "name"
          ]
        },
        "medication_request_allowed": {
          "type": "boolean",
          "description": "indicator whether medication is allowed to use in new medication request"
        },
        "reimbursement": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "description": "fixed or external type of reimbursement (Dictionary REIMBURSEMENT_TYPE)"
            },
            "reimbursement_amount": {
              "type": "number",
              "minimum": 0,
              "description": "Amount to reimburse for one medication_unit by medical_program"
            }
          },
          "required": [
            "type"
          ]
        },
        "is_active": {
          "type": "boolean",
          "description": "flag for activation/deactivation"
        },
        "inserted_at": {
          "type": "string",
          "pattern": "^(19|20)[0-9][0-9]-((0[1-9]|1[012])-(0[1-9]|[12][0-9])|(0[13-9]|1[012])-30|(0[13578]|1[02])-31)T([0-1][0-9]|2[0-3])(:[0-5][0-9]){2}Z$",
          "description": "ISO 8601 date and time in UTC timezone."
        },
        "inserted_by": {
          "type": "string",
          "pattern": "^[0-9a-f]{8}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{12}$"
        },
        "updated_at": {
          "type": "string",
          "pattern": "^(19|20)[0-9][0-9]-((0[1-9]|1[012])-(0[1-9]|[12][0-9])|(0[13-9]|1[012])-30|(0[13578]|1[02])-31)T([0-1][0-9]|2[0-3])(:[0-5][0-9]){2}Z$",
          "description": "ISO 8601 date and time in UTC timezone."
        },
        "updated_by": {
          "type": "string",
          "pattern": "^[0-9a-f]{8}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{12}$"
        }
      },
      "required": [
        "id",
        "medication",
        "medical_program",
        "medication_request_allowed",
        "reimbursement",
        "is_active",
        "inserted_at",
        "inserted_by",
        "updated_at",
        "updated_by"
      ],
      "additionalProperties": false
    }
  }
}
